@{
    ViewData["Title"] = "Napravi kviz";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" type="text/css" href="~/css/questions.css">

<div class="QuizCreation">

    <div class="LeftSide">
        <div class="QuizCreationForm">
            <form asp-action="Create">
                <div class="form-group">
                    <input type='button' value='Povratak nazad' class="custom-button-danger" onclick='window.location = "@Url.Action("Index", "Quizzes")";' />
                    <input type="button" name="command" value="Napravi" class="custom-button"  onclick="jsFetch()"/>
                </div>
                <div  class="text-danger"></div>
                <div class="form-group">
                    <br />
                    <div class="quiz-creation">
                        <label>Ime kviza</label>
                        <br />
                        <textarea  id="quizName" class="form-control" style="resize: both"></textarea>
                        <br/>
                        <div class="form-group">
                            <label class="control-label">Pitanja po pokušaju</label>
                            <input type="number" id="questionPerTry" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Vreme za izradu kviza (u minutima)</label>
                            <input type="number" id="timeForQuiz" class="form-control" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
</div>

<div class="RightSide">
    <form asp-action="Create">
        <div class="QuestionCreation">
            <input type="button" name="command" value="Dodaj pitanje" class="custom-button addQuestionButton" onclick="addQuestion();" />
            <div class="new-question-form">
                <label>Pitanje </label>
                <br />
                <textarea id="questionText" class="form-control" style="resize: both"></textarea>
                <div>
                    <label>Broj poena: </label>
                    <input type="number" name="questionPoints" id="questionPoints" value="" />
                </div>

                <label>Odgovor </label>
                <div id="answer-options">
                    <label>Izaberite tip odgovora </label>
                    <br />
                    <input type="radio" onchange="createAnswerTextArea();" value="Text" name="AnswerType" /> Tekst
                    <br />
                    <input type="radio" onchange="createAnswerSelectionArea();" value="Select" name="AnswerType" /> Izbor
                    <br />
                    <input type="radio" onchange="createAnswerImageArea();" value="Image" name="AnswerType" /> Slika
                    <br />
                </div>
            </div>
        </div>
    </form>
</div>
</div>

<div class="addedThings">
    <div class="ExistingQuestions">
        <input type='button' value='Prikazi postojeca pitanja' class="custom-button existingQuestionsButton" onclick="showQuestions();" />
        <div id="questions" hidden="hidden">

        </div>
    </div>
    <div class="AnswersDiv" hidden="hidden">

    </div>

</div>
<script src="~/js/QuizForm.js" type="module"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
