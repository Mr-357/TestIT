@model TestIT.Models.Form

@{
    ViewData["Title"] = "Create a quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a quiz</h1>
<script src="~/js/site.js" type="module"></script> 
<hr />

<div>
    <label>Current number of questions:&emsp;500&emsp;&emsp;&emsp;</label>
    <!-- Show or hide the new question form -->
    <button onclick="createQuestion(document.getElementsByClassName('new-question-form'));" class="btn btn-primary">+</button>
    <input type='button' value='Show questions' class="btn btn-primary" onclick='window.location = "@Url.Action("Index", "Forms")";' />
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <br /> 
                <div class="new-question-form" hidden="hidden">
                    <label>Question: </label>
                    <br />
                    <textarea asp-for="Data" class="form-control" style="resize: both"></textarea>
                    <label>Answer: </label>

                    <div id="answer-options">
                        <label>Pick answer type: </label>
                        <br /> 
                        <input type="radio" onchange="createAnswerTextArea();" value="Text" name="AnswerType"/> Text
                        <br />      
                        <input type="radio" onchange="createAnswerSelectionArea();" value="Select" name="AnswerType"/> Select
                        <br /> 
                        <input type="radio" onchange="createAnswerImageArea();" value="Image" name="AnswerType"/> Image
                        <br /> 
                    </div>
                </div>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  hidden="hidden" type="submit" value="Create" class="btn btn-primary new-question-form"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
