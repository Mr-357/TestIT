@model TestIT.Models.ViewModels.UsersViewModel

@{
    ViewData["Title"] = "Korisnici";
}

<form>
    <label>Pretrazi po imenu</label>
    <div style="display:flex; flex-direction:row">
        <input type="text" name="filter" maxlength="250" />
        <button style="margin-left:1%" class="btn btn-primary" type="submit">Pretrazuj</button>
    </div>
</form>


<table class="table custom-table">
    <thead>
        <tr>
            <p style="text-align: center">Korisnici</p>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var u in Model.GetUsers())
            {
                <tr>
                    <td>@u.FullName()</td>
                    <td> <a class="table-button text-danger" href='/Home/VS/@u.Id' style="margin-right:5px;">Izazovi</a> <a class="table-button" href='/Home/UserInfo/@u.Id' style="margin-left:5px";>Vidi profil</a> </td>
                </tr>
            }
        }        
    </tbody>
</table>