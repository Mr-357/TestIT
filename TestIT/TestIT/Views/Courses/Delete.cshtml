@model TestIT.Models.Course

@{
    ViewData["Title"] = "Brisanje predmeta";
}

<h3>Da li ste sigurni da zelite da obrisete ovaj predmet?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchoolYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Module)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Module)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Short)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Short)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Obrisi" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Povratak na listu</a>
    </form>
</div>
