@model TestIT.Models.Competition

@{
    ViewData["Title"] = "Napravi novi turnir";
}
<script src="~/js/Competition.js" type="module"></script>
<body onload="get()">
    <h1>Napravi novi turnir</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Deadline" class="control-label"></label>
                    <input asp-for="Deadline" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Course" class="control-label"></label>
                    <select asp-for="Course" id="predmet" class="form-control" ></select>
                </div>
                <div class="form-group">
                    <label asp-for="Quiz" class="control-label"></label>
                    <select asp-for="Quiz" class="form-control" ></select>
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Napravi" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-danger">Povratak na listu</a>
    </div>

</body>