@model IEnumerable<TestIT.Models.Competition>

@{
    ViewData["Title"] = "Turniri";
}

<h1>Postojeci turniri</h1>
<p>
    <a asp-action="Create" class="btn btn-primary" style="color:white">Napravi novi turnir</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                <a asp-action="Edit" class="table-button text-primary" asp-route-id="@item.ID">Izmeni</a> |
                <a asp-action="Delete" class="table-button text-danger" asp-route-id="@item.ID">Obrisi</a>
            </td>
        </tr>
}
    </tbody>
</table>
