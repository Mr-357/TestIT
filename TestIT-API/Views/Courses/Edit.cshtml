@model TestIT.Models.Course

@{
    ViewData["Title"] = "Detalji predmeta";
}
<link rel="stylesheet" type="text/css" href="~/css/EditCourse.css" />

<h1>Detalji predmeta</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="container-cst">
            <div class="left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="SchoolYear" class="control-label"></label>
                    <input asp-for="SchoolYear" class="form-control" />
                    <span asp-validation-for="SchoolYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Module" class="control-label"></label>
                    <input asp-for="Module" class="form-control" />
                    <span asp-validation-for="Module" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Short" class="control-label"></label>
                    <input asp-for="Short" class="form-control" />
                    <span asp-validation-for="Short" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </div>
            <div class="right">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control text-area"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger" style="margin-left:1%">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
